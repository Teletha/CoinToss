<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="error" packages="trademate.console">

    <!-- Properties -->
    <Properties>
        <Property name="pattern">%d{yyy-MM-dd HH:mm:ss.SSS}   %msg%n</Property>
    </Properties>

    <!-- Console Appender -->
    <Appenders>
        <Console name="SYSTEM" target="SYSTEM_OUT">
            <PatternLayout pattern="${pattern}" />
        </Console>
        
        <UI name="UI">
            <PatternLayout pattern="${pattern}" />
        </UI>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="SYSTEM" />
            <AppenderRef ref="UI" />
        </Root>
    </Loggers>
</Configuration>
